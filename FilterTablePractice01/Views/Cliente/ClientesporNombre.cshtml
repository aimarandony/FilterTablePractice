    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-primary" })
</p>*@

@using (Html.BeginForm())
{
<div class="form-group row mt-4">
    <label class="col-auto col-form-label">Ingresa el nombre del Cliente:</label>
    <div class="col-sm-6">
        <input type="text" class="form-control" name="nombre" value="@ViewBag.nombre" />
    </div>
    <input type="submit" class="btn btn-success" value="BUSCAR" />
</div>
}
<table class="table table-hover table-striped mt-2">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idcli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nomcli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apecli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.iddist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_reg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idcli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nomcli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apecli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.iddist)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_reg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
