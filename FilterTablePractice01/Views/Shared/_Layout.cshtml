<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-3">
        <span class="navbar-brand">FILTRO POR TABLAS</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @Html.ActionLink("Nombre", "ClientesporNombre", "Cliente",null, new { @class="nav-link"})
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Fecha", "ClientesporFecha", "Cliente", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Nombre y Fecha", "ClientesporNombreFecha", "Cliente", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <style>
        .autor{
            color:#fff;
        }
        .autor:hover {
            color: #000;
            font-weight:bold;
        }
    </style>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year <span class="autor">- Aimar Berrocal Coaquira</span></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
